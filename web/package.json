{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "node server.js",
    "start:next": "next start",
  "build:export": "STATIC_EXPORT=true NEXT_PUBLIC_STATIC_EXPORT=true next build",
  "export": "npm run build:export",
    "preview:static": "npx serve -s out -l 3000",
    "lint": "eslint",
    "gen:data": "tsx scripts/generate-products.ts 3000",
    "import:csv": "tsx scripts/import-from-csv.ts",
    "export:csv": "if [ -z \"$GOOGLE_SHEETS_CSV_URL\" ]; then echo 'Please set GOOGLE_SHEETS_CSV_URL'; exit 1; fi; npm run import:csv -- \"$GOOGLE_SHEETS_CSV_URL\" && npm run export",
    "export:file": "npm run import:csv -- ./public/data/products.template.csv && npm run export"
  },
  "dependencies": {
    "googleapis": "^161.0.0",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "tailwindcss": "^4",
    "tsx": "^4",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.18.0 <21"
  }
}
